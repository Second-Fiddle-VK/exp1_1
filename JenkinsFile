pipeline{
	agent any
	tools{
		maven 'maven'
		jdk 'JDK'
	}
	stages{
		stage('Checkout'){
			steps{
				git 'https://github.com/Second-Fiddle-VK/exp1_1.git'
			}
		}
		stage('Build'){
			steps{
				sh 'mvn clean install'
			}
		}
		stage('Test'){
			steps{
				sh 'mvn test'
			}
		}
		stage('Run Application'){
			steps{
				sh 'mvn exec:java -Dexec.mainClass="com.example.App"'
			}
		}
	}
	post{
		success{
			echo 'Build and Run successfully'
		}
		failure{
			echo 'Build/Run Failed'
		}
	}
}
